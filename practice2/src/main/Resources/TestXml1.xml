<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- bean definitions here -->
	<bean id="e1" class="com.SpringCore.DTO.Employee">
		<constructor-arg name="id" value="101" />
		<constructor-arg name="name" value="yugal" />
		<constructor-arg name="ad" ref="a1" />
	</bean>

	<bean id="a1" class="com.SpringCore.DTO.Address">
		<constructor-arg name="sector" value="4"/>
		<constructor-arg name="city" value="Bhilai"/>
	</bean>

</beans>
